        </profile>
        
        
        
         <profile>
            <properties>
                <seq>seq</seq>
            </properties>
            <id>seq</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <version>3.0.0-M5</version>
                        <configuration>
                       		<includes>
            				<include>trial.java</include>
       					    </includes>
                            <systemPropertyVariables>
                            <profileId>on-prem</profileId>
                        </systemPropertyVariables>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
  	</profiles>
  
  
  
  
  
  
</project>
