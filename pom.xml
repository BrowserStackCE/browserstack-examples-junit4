                        <version>3.0.0-M5</version>
                        <configuration>
                       
                            <systemPropertyVariables>
                            <profileId>docker</profileId>
                        </systemPropertyVariables>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        
        
        
        
        
         <profile>
            <properties>
                <bstack-parallel>bstack-parallel</bstack-parallel>
            </properties>
            <id>bstack-parallel</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <version>3.0.0-M5</version>
                        <configuration>
                       		<includes>
            				<include>ImageNotLoading.java</include>
            				<include>CheckFavouriteItems.java</include>
							<include>CheckExistingOrders.java</include> 
							<include>ApplyingFilters.java</include>
							<include>LowestToHighest.java</include>
							<include>CheckOffers.java</include>
							<include>FavouritesEnforcesLoginTest.java</include>
							<include>LockedUserTest.java</include>
							<include>EndToEndTest.java</include>
       					    </includes>
                            <systemPropertyVariables>
                            <profileId>bstack-parallel</profileId>
                        </systemPropertyVariables>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        
        
        
        
         <profile>
            <properties>
                <bstack-local-parallel>bstack-local-parallel</bstack-local-parallel>
            </properties>
            <id>bstack-local-parallel</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <version>3.0.0-M5</version>
                        <configuration>
                       		<includes>
            				<include>ImageNotLoading.java</include>
            				<include>CheckFavouriteItems.java</include>
							<include>CheckExistingOrders.java</include> 
							<include>ApplyingFilters.java</include>
							<include>LowestToHighest.java</include>
							<include>CheckOffers.java</include>
							<include>FavouritesEnforcesLoginTest.java</include>
							<include>LockedUserTest.java</include>
							<include>EndToEndTest.java</include>
       					    </includes>
                            <systemPropertyVariables>
                            <profileId>bstack-local-parallel</profileId>
                        </systemPropertyVariables>
